<?php

class AnimalProducts
{
    public $productname;
    public $price;
    public $code;
    public $description;

    public function __construct($productname, $price, $code, $description)
    {
        $this->productname = $productname;
        $this->price = $price;
        $this->setCode($code);
        $this->description = $description;
    }

    public function setPrice($price)
    {
        if (is_integer($price) && $price >= 0) {
            $this->price = $price;
        }
        return $price;
    }

    public function setCode($code)
    {
        mt_rand(10000, 99999);
        return $code;
    }
}
